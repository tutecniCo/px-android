<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mpsdk_light_gray"
        android:orientation="vertical"
        android:paddingEnd="@dimen/mpsdk_xl_margin"
        android:paddingLeft="@dimen/mpsdk_xl_margin"
        android:paddingRight="@dimen/mpsdk_xl_margin"
        android:paddingStart="@dimen/mpsdk_xl_margin">

        <com.mercadopago.customviews.MPTextView
            android:id="@+id/mpsdkInstructionsInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/mpsdk_l_alternative_margin"
            android:textColor="@color/mpsdk_black"
            android:textSize="@dimen/mpsdk_l_text"
            tools:text="Title" />

        <com.mercadopago.customviews.MPTextView
            android:id="@+id/mpsdkInstructionsInfoContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/mpsdk_l_margin"
            android:textColor="@color/mpsdk_brownish_grey"
            android:textSize="@dimen/mpsdk_s_text"
            tools:text="content" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/mpsdkInstructionsInfoDividerBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mpsdk_l_alternative_margin"
        android:background="@color/mpsdk_light_gray"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/mpsdk_xxxs_height"
            android:layout_gravity="bottom"
            android:background="@color/mpsdk_med_light_gray" />
    </FrameLayout>

</LinearLayout>