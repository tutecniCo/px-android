<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mpsdk_light_gray"
        android:orientation="vertical"
        android:paddingEnd="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingStart="24dp">

        <com.mercadopago.customviews.MPTextView
            android:id="@+id/mpsdkInstructionsInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textColor="@color/mpsdk_black"
            android:textSize="20sp"
            tools:text="Title" />

        <com.mercadopago.customviews.MPTextView
            android:id="@+id/mpsdkInstructionsInfoContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:textColor="@color/mpsdk_brownish_grey"
            android:textSize="16sp"
            tools:text="content" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/mpsdkInstructionsInfoDividerBottom"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/mpsdk_light_gray"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/mpsdk_divider_gray" />
    </FrameLayout>

</LinearLayout>