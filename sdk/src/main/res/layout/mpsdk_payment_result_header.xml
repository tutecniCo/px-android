<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mpsdkPaymentResultContainerHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingEnd="@dimen/mpsdk_m_alternative_margin"
    android:paddingLeft="@dimen/mpsdk_m_alternative_margin"
    android:paddingRight="@dimen/mpsdk_m_alternative_margin"
    android:paddingStart="@dimen/mpsdk_m_alternative_margin"
    android:paddingBottom="@dimen/mpsdk_xxxl_margin"
    tools:background="@color/mpsdk_green_MP">

    <FrameLayout
        android:id="@+id/iconContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mpsdk_xxxl_margin" />

    <com.mercadopago.customviews.MPTextView
        android:id="@+id/mpsdkHeaderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mpsdk_xxs_margin"
        android:gravity="center_horizontal"
        android:textColor="@color/mpsdk_white"
        android:textSize="@dimen/mpsdk_s_text"
        tools:text="Lorem ipsum dolor sit" />

    <com.mercadopago.customviews.MPTextView
        android:id="@+id/mpsdkHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mpsdk_s_margin"
        android:gravity="center_horizontal"
        android:textColor="@color/mpsdk_white"
        android:textSize="@dimen/mpsdk_xxxl_text"
        tools:text="¡Listo, se acreditó tu pago!" />

</LinearLayout>