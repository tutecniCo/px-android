<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mpsdk_light_gray"
    android:paddingEnd="@dimen/mpsdk_xl_margin"
    android:paddingLeft="@dimen/mpsdk_xl_margin"
    android:paddingRight="@dimen/mpsdk_xl_margin"
    android:paddingStart="@dimen/mpsdk_xl_margin">

    <com.mercadopago.customviews.MPTextView
        android:id="@+id/mpsdkInstructionsReferencesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/mpsdk_l_alternative_margin"
        android:textColor="@color/mpsdk_black"
        android:textSize="@dimen/mpsdk_l_text"
        tools:text="Title" />

    <LinearLayout
        android:id="@+id/mpsdkInstructionsReferencesContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

</LinearLayout>