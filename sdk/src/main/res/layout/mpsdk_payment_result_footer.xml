<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/mpsdk_white">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mpsdk_xxxs_height"
        android:background="@color/mpsdk_med_light_gray" />

    <com.mercadopago.customviews.MPButton
        android:id="@+id/button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mpsdk_xxxl_height"
        android:layout_marginLeft="@dimen/mpsdk_s_margin"
        android:layout_marginRight="@dimen/mpsdk_s_margin"
        android:layout_marginStart="@dimen/mpsdk_s_margin"
        android:layout_marginEnd="@dimen/mpsdk_s_margin"
        android:layout_marginTop="@dimen/mpsdk_s_margin"
        android:background="@drawable/mpsdk_button_bg_stroke"
        android:elevation="@dimen/mpsdk_zero_height"
        android:gravity="center"
        android:text="@string/mpsdk_text_pay_with_other_method"
        android:textAllCaps="false"
        android:textColor="@color/mpsdk_white_background"
        android:textSize="@dimen/mpsdk_s_text" />

    <com.mercadopago.customviews.MPTextView
        android:id="@+id/link"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mpsdk_xxxl_height"
        android:layout_marginBottom="@dimen/mpsdk_s_alternative_1_margin"
        android:layout_marginLeft="@dimen/mpsdk_s_margin"
        android:layout_marginRight="@dimen/mpsdk_s_margin"
        android:layout_marginStart="@dimen/mpsdk_s_margin"
        android:layout_marginEnd="@dimen/mpsdk_s_margin"
        android:layout_marginTop="@dimen/mpsdk_s_margin"
        android:gravity="center"
        android:text="@string/mpsdk_text_continue"
        android:textColor="@color/mpsdk_blue_MP"
        android:textSize="@dimen/mpsdk_s_text" />

</LinearLayout>